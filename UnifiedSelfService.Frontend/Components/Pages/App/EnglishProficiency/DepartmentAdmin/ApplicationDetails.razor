            <Card
                CardTitle="Application Details" 
                ShowBorder=true
                BorderRadius="xl">

                    <div class="flex justify-between items-center py-6">
                        <div class="px-16">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="font-bold">Name</td>
